NODE_ENV=development
PORT=8080

DATABASE_URL=postgresql://postgres:admin3545@localhost:5432/navbahor_erp?schema=public

JWT_SECRET=supersecret
JWT_REFRESH_SECRET=superrefresh
JWT_EXPIRES=1h
JWT_REFRESH_EXPIRES=7d

REDIS_URL=redis://localhost:6379

# Scale hardware (RS-232)
SCALE_SERIAL_PORTS= # e.g. COM3,COM4 (comma-separated). If empty -> auto-scan
SCALE_SERIAL_BAUD=9600
SCALE_BAUD_CANDIDATES=9600,19200,4800,115200
SCALE_ALLOWED_PORTS= # optional whitelist, e.g. COM3,COM4
SCALE_MODEL=GENERIC_RS232
SCALE_RECONNECT_DELAY_MS=3000

# WebSocket (client uses io(`${NEXT_PUBLIC_WS_URL}/scale`))
# Ensure NEXT_PUBLIC_WS_URL on frontend points to http://host:PORT of this backend

# Printer (GoDEX)
PRINTER_MODE=network # network | serial
PRINTER_HOST=127.0.0.1
PRINTER_PORT=9100
PRINTER_SERIAL_PORT= # e.g. COM5
PRINTER_SERIAL_BAUD=9600
